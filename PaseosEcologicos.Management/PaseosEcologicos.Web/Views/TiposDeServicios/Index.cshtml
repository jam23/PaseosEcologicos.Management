@model IEnumerable<PaseosEcologicos.Model.Tipos_De_Servicios>

@{
    ViewBag.Title = "Index";
}

<h2>Tipos de Servicios</h2>

<p>
    @Html.ActionLink("Crear Tipo Servicio", "Create",null, new  {@class = "btn btn-default"})
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            Titulo
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Servicios
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Titulo
        </td>
        <td>
			@item.Descripcion
        </td>
        <td>
			@(item.Servicios == null ? "None" : item.Servicios.Count.ToString())
        </td>
    </tr>
}

</table>


