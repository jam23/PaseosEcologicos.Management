@model PaseosEcologicos.Model.Paseos

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Paseos</legend>

    <div class="display-label">Titulo</div>
    <div class="display-field">@Model.Titulo</div>

    <div class="display-label">Descripcion</div>
    <div class="display-field">@Model.Descripcion</div>

    <div class="display-label">FechaDePartida</div>
    <div class="display-field">@String.Format("{0:g}", Model.FechaDePartida)</div>

    <div class="display-label">Precio</div>
    <div class="display-field">@String.Format("{0:F}", Model.Precio)</div>

    <div class="display-label">Reservaciones</div>
    <div class="display-field">@(Model.Reservaciones == null ? "None" : Model.Reservaciones.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


