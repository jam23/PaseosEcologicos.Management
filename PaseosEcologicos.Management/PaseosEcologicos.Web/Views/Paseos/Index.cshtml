@model IEnumerable<PaseosEcologicos.Model.Paseos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            Titulo
        </th>
        <th>
            Descripcion
        </th>
        <th>
            FechaDePartida
        </th>
        <th>
            Precio
        </th>
        <th>
            Reservaciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Titulo
        </td>
        <td>
			@item.Descripcion
        </td>
        <td>
			@String.Format("{0:g}", item.FechaDePartida)
        </td>
        <td>
			@String.Format("{0:F}", item.Precio)
        </td>
        <td>
			@(item.Reservaciones == null ? "None" : item.Reservaciones.Count.ToString())
        </td>
    </tr>
}

</table>


